oriRDM = np.zeros([16, 16])
for i in range(16):
    for j in range(16):
        diff = np.abs(i - j)
        if diff <= 8:
            oriRDM[i, j] = diff / 8
        else:
            oriRDM[i, j] = (16 - diff) / 8
print(oriRDM)


oriRDM.shape





conditions = ["0°", "22.5°", "45°", "67.5°", "90°", "112.5°", "135°", "157.5°", "180°",
